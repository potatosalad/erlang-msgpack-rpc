%% -*- erlang -*-
{lib_dirs, ["deps", "apps"]}.
{erl_opts, [{i, "apps"},
            {i, "deps"},
            {d, 'TEST'},
            {parse_transform, eunit_autoexport},
            warnings_as_errors,
            debug_info]}.
{sub_dirs, ["apps/msgpack_rpc", "apps/msgpack_rpc_client", "apps/msgpack_rpc_server"]}.
{erl_first_files, ["src/msgpack_rpc_middleware.erl", "src/msgpack_rpc_handler.erl"]}.
{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{cover_print_enabled, false}.
{edoc_opts, [{dialyzer_specs, all}, {report_missing_type, true},
             {report_type_mismatch, true}, {pretty_print, erl_pp},
             {preprocess, true}, {dir, "../../doc"}]}.
{validate_app_modules, true}.
{deps, [
  {msgpack, ".*", {git, "git://github.com/msgpack/msgpack-erlang.git", {branch, "master"}}},
  {ranch, ".*", {git, "git://github.com/extend/ranch.git", {branch, "master"}}},
  {ct_helper, ".*", {git, "git://github.com/extend/ct_helper.git", {branch, "master"}}},
  {proper, ".*", {git, "git://github.com/manopapad/proper.git", {branch, "master"}}}
 ]}.
